<div class="container">
  <div class="card border-0 shadow my-5">
    <div class="card-body p-5">
      <h1 class="font-weight-light">My Account</h1>
      <p class="lead">

        <h3>My Reviews</h3>
        <div>
            <% @reviews.each do |review| %>
                <div class="d-inline-block">
                  <div class="d-md-inline-block" style="padding-bottom:10px; padding-top:10px; font-size:1.1em;">
                    "<%= review.content %>" <a href="/movies/<%= review.movie.id %>"><strong><%= review.movie.title %></strong></a>
                  </div>

                  <div class="d-md-inline-block" style="padding-bottom:5px;">  
                    <a href="/reviews/<%= review.id %>"><button class="btn btn-primary btn-sm">View Review</button></a>
                  </div>

                  <div class="d-md-inline-block" style="padding-bottom:5px;">  
                    <a href="/reviews/<%= review.id %>/edit"><button class="btn btn-primary btn-sm">Edit Review</button></a>
                  </div>

                  <div class="d-md-inline-block" style="padding-bottom:5px;">
                    <form action="/reviews/<%= review.id %>/delete" method="POST">
                      <input id="hidden" type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-primary btn-sm">Delete Review</button>
                    </form>
                  </div>  

                  <hr>
                </div>
            <% end %>
        </div>
      </p>
      <div style="height: 700px"></div>
    </div>
  </div>
</div>